{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C-Tempo",
            "type": "shell",
            "command": "g++",
            "args": [
                "C-Tempo (color ver.)/C-Tempo/C-Tempo(color ver.).cpp",
                "-o",
                "C-Tempo (color ver.)/C-Tempo/C-Tempo.exe",
                "-std=c++14",
                "-lwinmm",
                "-mwindows"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "编译 C-Tempo 项目"
        }
    ]
}